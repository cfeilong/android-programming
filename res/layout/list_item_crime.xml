<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <CheckBox
        android:id="@+id/crime_item_solved_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:gravity="center"
        android:padding="4dp" 
        android:focusable="false"/>

    <TextView
        android:id="@+id/crime_item_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crime_item_solved_checkbox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Crime date"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/crime_item_date_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crime_item_solved_checkbox"
        android:layout_below="@+id/crime_item_title_textview"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="Crime tittle"
        />

</RelativeLayout>